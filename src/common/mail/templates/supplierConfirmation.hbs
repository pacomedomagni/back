    <table
      style='width: 100%; border-collapse: collapse;'
      cellpadding='0'
      cellspacing='0'
      role='presentation'
    >
      <thead>
        <tr>
          <th style='padding: 8px; border: 1px solid #e2e8f0;'>Product Name</th>
          <th style='padding: 8px; border: 1px solid #e2e8f0;'>Quantity</th>
          <th style='padding: 8px; border: 1px solid #e2e8f0;'>Rate</th>
          <th style='padding: 8px; border: 1px solid #e2e8f0;'>Amount</th>
        </tr>
      </thead>
      <tbody>
        <!-- Iterate over each product and populate the table rows -->
        {% for item in productDetails %}
        <tr>
          <td
            style='padding: 8px; border: 1px solid #e2e8f0;'
          >{{item.productName}}</td>
          <td
            style='padding: 8px; border: 1px solid #e2e8f0;'
          >{{item.quantity}}</td>
          <td
            style='padding: 8px; border: 1px solid #e2e8f0;'
          >{{item.rate}}</td>
          <td
            style='padding: 8px; border: 1px solid #e2e8f0;'
          >{{item.amount}}</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>

